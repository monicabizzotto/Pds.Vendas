@model Pds.Vendas.Web.Models.ProdutoViewModel;
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Produtos</h1>

<table class="table">
	<thead>
		<tr>
			<th>Id</th>
			<th>Nome</th>
			<th>Fornecedor</th>
		</tr>
	</thead>
	<tbody>
		@for(int i = 0; i< Model.Produtos.Count; i++)
		{
			<tr>
				<td>@Model.Produtos[i].Id</td>
				<td>@Model.Produtos[i].Nome</td>
				<td>@Model.Produtos[i].Fornecedor.Nome</td>
			</tr>
		}
	</tbody>
</table>

